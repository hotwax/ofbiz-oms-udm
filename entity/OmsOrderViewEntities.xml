                </econditions>
                <econdition entity-alias="ODR" field-name="roleTypeId" operator="equals" value="BILL_TO_CUSTOMER"/>
            </econditions>
            <order-by field-name="entryDate"/>
        </entity-condition>
    </view-entity>

